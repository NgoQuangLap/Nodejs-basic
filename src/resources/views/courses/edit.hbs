<div class="mt-4">
    <h3>Edit course</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Course name</label>
            <input type="text" class="form-control" name="name" id="name" value="{{course.name}}">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" name="description" id="description">
                {{course.description}}
            </textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Id video</label>
            <input type="text" class="form-control" name="videoId" id="videoId" value="{{course.videoId}}">
        </div>
        <div class="form-group">
            <label for="level">Level course</label>
            <input type="text" class="form-control" name="level" id="level" value="{{course.level}}">
        </div>
        <button type="submit" class="btn btn-primary">Save course</button>
    </form>
</div>